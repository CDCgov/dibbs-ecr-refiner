{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run watch:openapi\" \"vite\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit",
    "build": "tsc -b && vite build --base=/dist",
    "watch:openapi": "nodemon",
    "codegen": "rimraf src/api/* && orval --config orval.config.ts",
    "lint:check": "eslint .",
    "lint": "eslint . --fix",
    "fmt:check": "prettier . --check",
    "fmt": "prettier . --write",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fontsource-variable/merriweather": "^5.2.2",
    "@fontsource-variable/public-sans": "^5.2.6",
    "@tanstack/react-query": "^5.85.3",
    "@tailwindcss/vite": "^4.1.11",
    "@trussworks/react-uswds": "^10.0.2",
    "axios": "^1.11.0",
    "classnames": "^2.5.1",
    "fuse.js": "^7.1.0",
    "react": "^19.1.1",
    "react-diff-viewer-continued": "^4.0.6",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router": "^7.5.2",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "focus-trap-react": "^10.3.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "orval": "^7.11.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "sass-embedded": "1.90.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.2",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
