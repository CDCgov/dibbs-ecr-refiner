{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run watch:openapi\" \"vite\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit",
    "build": "tsc -b && vite build --base=/dist",
    "watch:openapi": "nodemon",
    "codegen": "rimraf src/api/* && orval --config orval.config.ts",
    "lint:check": "eslint .",
    "lint": "eslint . --fix",
    "fmt:check": "prettier . --check",
    "fmt": "prettier . --write",
    "preview": "vite preview",
    "e2e": "npx playwright test",
    "e2e:dev": "npx playwright test --ui",
    "e2e:report": "npx playwright show-report"
  },
  "dependencies": {
    "@fontsource-variable/merriweather": "^5.2.6",
    "@fontsource-variable/public-sans": "^5.2.7",
    "@headlessui/react": "^2.2.9",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@trussworks/react-uswds": "^11.0.0",
    "axios": "^1.13.5",
    "classnames": "^2.5.1",
    "fuse.js": "^7.1.0",
    "react": "^19.2.4",
    "react-diff-viewer-continued": "^4.0.6",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.0",
    "react-spinners": "^0.17.0",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.16",
    "use-debounce": "^10.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@tanstack/eslint-plugin-query": "^5.91.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-testing-library": "^7.15.4",
    "focus-trap-react": "^11.0.4",
    "globals": "^17.1.0",
    "jsdom": "^28.0.0",
    "nodemon": "^3.1.10",
    "orval": "^8.2.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "sass-embedded": "1.97.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.20.0"
  }
